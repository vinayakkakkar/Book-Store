<%= form_with(model: book, local: true, multipart:true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.text_field :genre, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :cover_image %>
    <%= form.file_field :cover_image, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Book', class: 'btn create-btn' %>
  </div>
<% end %>
